<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.littglobal.vidcomp.videomanipulation"
    android:targetSandboxVersion="2"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="27" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.littglobal.vidcomp.videomanipulation.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.littglobal.vidcomp.videomanipulation.RotationActivity"
            android:label="@string/app_name" />
        <activity
            android:name="com.littglobal.vidcomp.videomanipulation.TrimActivity"
            android:label="@string/app_name" />
        <activity
            android:name="com.littglobal.vidcomp.videomanipulation.ResampleActivity"
            android:label="@string/app_name" />
    </application>

</manifest>